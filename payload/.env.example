# MilAssist Environment Variables Template
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# =============================================================================
# PAYLOAD CMS CONFIGURATION
# =============================================================================

# Generate a secure secret (32+ characters):
# Run: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
PAYLOAD_SECRET=your-super-secret-key-min-32-characters-change-this-now

# Server URL (update for production)
PAYLOAD_PUBLIC_SERVER_URL=http://localhost:3000
# Production (update with your Vercel URL)
# PAYLOAD_PUBLIC_SERVER_URL=https://your-app.vercel.app

# =============================================================================
# DATABASE (Supabase PostgreSQL)
# =============================================================================

# Get from Supabase Dashboard → Settings → Database → Connection string
# Format: postgresql://postgres:[PASSWORD]@db.[PROJECT_REF].supabase.co:5432/postgres
DATABASE_URI=postgresql://postgres:[YOUR-PASSWORD]@db.[PROJECT-REF].supabase.co:5432/postgres

# =============================================================================
# AWS S3 STORAGE
# =============================================================================

AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-east-1
S3_BUCKET=milassist-uploads

# =============================================================================
# JWT AUTHENTICATION
# =============================================================================

JWT_SECRET=your-jwt-secret-key-change-this

# =============================================================================
# GOOGLE OAUTH (SSO)
# =============================================================================

# Get from Google Cloud Console → APIs & Services → Credentials
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3000/api/oauth/google/callback

# =============================================================================
# MICROSOFT OAUTH (SSO)
# =============================================================================

# Get from Azure Portal → Azure Active Directory → App registrations
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret
MICROSOFT_TENANT_ID=common
MICROSOFT_REDIRECT_URI=http://localhost:3000/api/oauth/microsoft/callback

# =============================================================================
# AI PROVIDERS (Optional - at least one required for AI features)
# =============================================================================

# OpenRouter (Recommended - access to 100+ models)
# Get from https://openrouter.ai/keys
OPENROUTER_API_KEY=sk-or-v1-your-openrouter-api-key
OPENROUTER_MODEL=anthropic/claude-3.5-sonnet

# Claude / Anthropic (Optional)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key
CLAUDE_MODEL=claude-3-5-sonnet-20241022

# OpenAI (Optional)
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4-turbo-preview

# Gemini / Google AI (Optional - has free tier)
GOOGLE_AI_API_KEY=your-google-ai-api-key
GEMINI_MODEL=gemini-pro

# =============================================================================
# TWILIO (Optional - for calls/SMS)
# =============================================================================

TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# =============================================================================
# STRIPE (Optional - for payments)
# =============================================================================

STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# =============================================================================
# ADMIN USER (Created on first run)
# =============================================================================

# These will be used to create the first admin user if it doesn't exist
ADMIN_EMAIL=admin@milassist.com
ADMIN_PASSWORD=change-this-password-in-production!
ADMIN_NAME=Admin User

# =============================================================================
# NODE ENVIRONMENT
# =============================================================================

NODE_ENV=development

