# Environment Variables Template
# Copy this to .env and fill in your actual values
# NEVER commit .env to version control

# Server
NODE_ENV=production
PORT=3000
APP_URL=http://localhost:3000
FRONTEND_URL=http://localhost:5174

# Security
JWT_SECRET=your_super_secret_jwt_key_here_min_32_chars
JWT_EXPIRATION=24h

# Stripe (REQUIRED - no fallback)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Database - PostgreSQL (Production)
DB_DIALECT=postgres
DB_HOST=localhost
DB_PORT=5432
DB_NAME=milassist
DB_USER=postgres
DB_PASSWORD=your_postgres_password

# Database - SQLite (Development only)
# DB_DIALECT=sqlite
# DB_STORAGE=./database.sqlite

# CORS
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# OAuth2 Providers (Optional)
# GMAIL_CLIENT_ID=your_gmail_client_id
# GMAIL_CLIENT_SECRET=your_gmail_client_secret
# OUTLOOK_CLIENT_ID=your_outlook_client_id
# OUTLOOK_CLIENT_SECRET=your_outlook_client_secret

# Twilio (Optional - for SMS/Voice)
# TWILIO_ACCOUNT_SID=your_twilio_account_sid
# TWILIO_AUTH_TOKEN=your_twilio_auth_token
# TWILIO_PHONE_NUMBER=+1234567890

# Email (for notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# Sync Settings (Optional)
EMAIL_SYNC_INTERVAL=5          # Minutes between email syncs
CALENDAR_SYNC_INTERVAL=15      # Minutes between calendar syncs

# CalDAV Calendar Support (iCloud, Yahoo, Fastmail, etc.)
# Per-user credentials stored in database - no global config needed
# Supported providers:
# - iCloud: https://caldav.icloud.com
# - Yahoo: https://caldav.calendar.yahoo.com
# - Fastmail: https://caldav.fastmail.com
# - Any RFC 4791 compliant CalDAV server

# AI Services (Optional - for AI productivity features)
# At least one is recommended for email drafting, summarization, etc.
OPENAI_API_KEY=sk-your_openai_api_key_here
ANTHROPIC_API_KEY=sk-ant-your_anthropic_api_key_here

# AWS S3 (REQUIRED for document storage and audit log archiving)
S3_BUCKET_NAME=milassist-documents
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=your_aws_access_key
S3_SECRET_ACCESS_KEY=your_aws_secret_key

# S3 Audit Log Archiving (for SOC2 compliance)
S3_AUDIT_ARCHIVE_BUCKET=milassist-audit-archive
S3_AUDIT_ARCHIVE_REGION=us-east-1

# SOC2 Compliance Settings
AUDIT_LOG_RETENTION_DAYS=2555    # 7 years (SOC2 requirement)
ENABLE_ANOMALY_DETECTION=true
ENABLE_CRITICAL_ALERTS=true

# Security Settings
MAX_LOGIN_ATTEMPTS=5             # Failed attempts before account lock
ACCOUNT_LOCK_DURATION=30         # Minutes
PASSWORD_MIN_LENGTH=12
REQUIRE_MFA=false                # Set to true for production

# VA Matching Settings
DEFAULT_VA_TIER=general          # Default tier for new VAs
MATCH_RESULTS_COUNT=5            # Number of matches to return
MIN_MATCH_SCORE=60               # Minimum score to show as match
